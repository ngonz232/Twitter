<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="UserDetailsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivProfileBanner"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/ivProfileImage"
        android:layout_alignParentStart="true"
        android:layout_below="@id/ivProfileBanner"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:layout_alignParentStart="true"
        android:layout_below="@id/ivProfileImage"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/ivVerified"
        android:layout_toEndOf="@id/tvName"
        android:layout_below="@id/ivProfileImage"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvScreenName"
        android:layout_below="@+id/tvName"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescription"
        android:layout_below="@id/tvScreenName"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/ivLocationIcon"
        android:layout_below="@id/tvDescription"
        android:layout_alignParentStart="true"
        android:background="@drawable/twitter"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLocation"
        android:layout_toEndOf="@id/ivLocationIcon"
        android:layout_below="@id/tvDescription"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/ivUrlIcon"
        android:layout_toEndOf="@id/tvLocation"
        android:layout_below="@id/tvDescription"
        android:background="@drawable/twitter"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUrl"
        android:layout_below="@id/tvDescription"
        android:layout_toEndOf="@id/ivUrlIcon"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:autoLink="all"
        android:linksClickable="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/ivCreatedAtIcon"
        android:layout_below="@id/ivLocationIcon"
        android:layout_alignParentStart="true"
        android:background="@drawable/twitter"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCreatedAt"
        android:layout_below="@id/ivLocationIcon"
        android:layout_toEndOf="@id/ivCreatedAtIcon"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFollowingCount"
        android:layout_below="@id/ivCreatedAtIcon"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFollowing"
        android:layout_below="@id/ivCreatedAtIcon"
        android:layout_toEndOf="@id/tvFollowingCount"
        android:text="Following"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFollowerCount"
        android:layout_below="@id/ivCreatedAtIcon"
        android:layout_toEndOf="@id/tvFollowing"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFollower"
        android:layout_below="@id/ivCreatedAtIcon"
        android:layout_toEndOf="@id/tvFollowerCount"
        android:text="Followers"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"/>
</RelativeLayout>